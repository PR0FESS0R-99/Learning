<style>
    @import url(/stylesheets/login.form.css);
</style>

<div class="login-container">
    <form class="login-form" id="userLoginForm">
        <h2>LOGIN ADMIN PANAL!</h2>
        <div class="form-group">
            <label for="email">
                <i class='bx bx-envelope'></i> Email
            </label>
            <span class="error" id="email-error"></span>
            <input type="email" id="email" name="email" value="demo@gmail.com">
        </div>
        <div class="form-group">
            <label for="password">
                <i class='bx bx-lock-alt'></i> Password
            </label>
            <span class="error" id="password-error"></span>
            <input type="password" id="password" name="password" value="1">
        </div>
        <button type="submit" class="login-button">
            Login
        </button>
        <div class="create-account">
            <a href="/admin/register">Create Account
                <i class='bx bxs-right-top-arrow-circle'></i>
            </a>
        </div>
    </form>
</div>

<script src="/javascripts/admins/login.js"></script>